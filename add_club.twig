<!DOCTYPE html>
<html>
<head>
    <title>Add New Club</title>
</head>
<body>

<h2>Add New La Liga Club</h2>

{# Success Message #}
{% if success %}
    <p style="color: green;">Club added successfully!</p>
    <p><a href="list-club.php">Back to Club List</a></p>
{% endif %}

{# Error Messages #}
{% if errors %}
    <div style="color: red;">
        <ul>
            {% for e in errors %}
                <li>{{ e }}</li>
            {% endfor %}
        </ul>
    </div>
{% endif %}

<form method="post">
    <input type="hidden" name="csrf" value="{{ csrf }}">

    <label>Club Name:</label><br>
    <input type="text" name="name" required value="{{ old.name }}"><br><br>

    <label>City:</label><br>
    <input type="text" name="city" value="{{ old.city }}"><br><br>

    <label>Stadium:</label><br>
    <input type="text" name="stadium" value="{{ old.stadium }}"><br><br>

    <label>Capacity:</label><br>
    <input type="number" name="capacity" value="{{ old.capacity }}"><br><br>

    <label>Founded Year:</label><br>
    <input type="number" name="founded_year" value="{{ old.founded_year }}"><br><br>

    <label>Manager:</label><br>
    <input type="text" name="manager" value="{{ old.manager }}"><br><br>

    <label>Notes:</label><br>
    <textarea name="notes">{{ old.notes }}</textarea><br><br>

    <button type="submit">Add Club</button>
</form>

<p><a href="list-club.php">â¬… Back to Club List</a></p>

</body>
</html>
